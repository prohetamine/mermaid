{
  "name": "Mermaid",
  "description": "Automated webcam chat reading and routing between devices and servers. Developer: https://prohetamine.ru made with ❤️",
  "version": "0.1.15",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["<all_urls>"],
      "js": [
        "src/libs/sleep.js",
        "src/libs/base64.js",
        "src/libs/socket.io.js",
        "src/sites-inject-scripts/chaturbate-script.js",
        "src/sites-inject-scripts/xhamsterlive-script.js",
        "src/sites-inject-scripts/stripchat-script.js",
        "src/sites-inject-scripts/bongacams-script.js"
      ]
    }
  ]
}
